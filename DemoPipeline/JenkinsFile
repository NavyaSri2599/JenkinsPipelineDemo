pipeline {
    agent any

    stages {
    
         stage('Compiling Stage') {
            steps {
            	def mvnTool = tool 'maven_3_8_1'
              sh "${mvnTool}/bin/mvn compile" 
            }
        }
    
         stage('Building Stage') {
            steps {
            	def mvnTool = tool 'maven_3_8_1'
              sh "${mvnTool}/bin/mvn clean install" 
            }
        }
         stage('Deploying Stage') {
            steps {
                def mvnTool = tool 'maven_3_8_1'
                sh "${mvnTool}/bin/mvn clean deploy"
            }
        }
    }
}
